.uni-swipe {
  position: relative;
  overflow: hidden;
}
.uni-swipe_box {
  display: flex;
  flex-shrink: 0;
  position: relative;
}
.uni-swipe_text--center {
  width: 100%;
  cursor: grab;
}
.uni-swipe_button-group {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 0;
  bottom: 0;
}
.button-group--left {
  left: 0;
  transform: translateX(-100%);
}
.button-group--right {
  right: 0;
  transform: translateX(100%);
}
.uni-swipe_button {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0 20px;
}
.uni-swipe_button-text {
  flex-shrink: 0;
  font-size: 14px;
}
.ani {
  transition-property: transform;
  transition-duration: 0.3s;
  transition-timing-function: cubic-bezier(0.165, 0.84, 0.44, 1);
}